<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ljy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">

	<com.ljy.mychat.widget.TitleBar
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    ljy:ljyTitle="@string/myself"/>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="75dp"
	    android:padding="5dp"
	    android:background="#737373"
	    >
	    <ImageView 
	        android:id="@+id/myself_picture"
	        android:layout_width="50dp"
	        android:layout_height="50dp"
	        android:layout_centerVertical="true"
	        android:src="@drawable/ljy_myselft_avatar"
	        />
	    <TextView 
	        android:id="@+id/ljy_nicheng"
	        android:layout_width="150dp"
	        android:layout_height="wrap_content"
	        android:text="冷月@￥如风"
	        android:gravity="center_vertical"
	        android:textSize="18sp"
	        android:textColor="@android:color/black"
	        android:layout_toRightOf="@id/myself_picture"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="10dp"/>
	    <TextView 
	        android:layout_width="150dp"
	        android:layout_height="wrap_content"
	        android:text="丘丘号:lijiangyong11222"
	        android:textColor="@android:color/darker_gray"
	        android:singleLine="true"
	        android:textSize="15sp"
	        android:gravity="center_vertical"
	        android:id="@+id/ljy_my_name"
	        android:layout_toRightOf="@id/myself_picture"
	        android:layout_alignParentBottom="true"
	        android:layout_below="@id/ljy_nicheng"
	        android:layout_marginLeft="10dp"/>
	    <ImageButton 
	        android:id="@+id/myselft_qianjin_ib"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="5dp"
	        android:src="@drawable/ljy_mm_title_enter"
	        android:layout_centerVertical="true"
	        android:background="#737373"
	        />
	</RelativeLayout>
	
	<RelativeLayout 
	    android:id="@+id/photo_list_rl"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:background="#737373"
	    android:layout_marginTop="20dp"
	    >
	   	<ImageView 
	   	    android:layout_marginLeft="20dp"
	   	    android:id="@+id/ljy_chat_image_normal"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:layout_centerVertical="true"
	        android:scaleType="centerCrop"
	        android:src="@drawable/ljy_chat_takepic_normal"
	        />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="相册"
	        android:textSize="18sp"
	        android:textColor="@android:color/white"
	        android:layout_marginLeft="15dp"
	        android:layout_marginTop="10dp"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@id/ljy_chat_image_normal"/>
	    <ImageView
	        android:layout_width="18dp"
	        android:layout_height="18dp"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
	        android:src="@drawable/ljy_mm_title_enter"
	        android:layout_centerVertical="true"
	        android:background="#737373"
	        android:scaleType="centerCrop"
	        />
	</RelativeLayout>
	
	<RelativeLayout 
	    android:id="@+id/money_list_rl"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:background="#737373"
		android:layout_marginTop="1dp"
	    >
	   	<ImageView 
	   	    android:layout_marginLeft="20dp"
	   	    android:id="@+id/ljy_chat_image_money_icon"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:layout_centerVertical="true"
	        android:scaleType="centerCrop"
	        android:src="@drawable/ljy_money_icon"
	        />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="钱包"
	        android:textSize="18sp"
	        android:textColor="@android:color/white"
	        android:layout_marginLeft="15dp"
	        android:layout_marginTop="10dp"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@id/ljy_chat_image_money_icon"/>
	    <ImageView
	        android:layout_width="18dp"
	        android:layout_height="18dp"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
	        android:src="@drawable/ljy_mm_title_enter"
	        android:layout_centerVertical="true"
	        android:background="#737373"
	        android:scaleType="centerCrop"
	        />
	</RelativeLayout>
	
	<RelativeLayout 
	    android:id="@+id/map_list_rl"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:background="#737373"
	    android:layout_marginTop="1dp"
	    >
	   	<ImageView 
	   	    android:layout_marginLeft="20dp"
	   	    android:id="@+id/ljy_chat_location_normal"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:layout_centerVertical="true"
	        android:scaleType="centerCrop"
	        android:src="@drawable/ljy_chat_location_normal"
	        />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="地图"
	        android:textSize="18sp"
	        android:textColor="@android:color/white"
	        android:layout_marginLeft="15dp"
	        android:layout_marginTop="10dp"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@id/ljy_chat_location_normal"/>
	    <ImageView
	        android:layout_width="18dp"
	        android:layout_height="18dp"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
	        android:src="@drawable/ljy_mm_title_enter"
	        android:layout_centerVertical="true"
	        android:background="#737373"
	        android:scaleType="centerCrop"
	        />
	</RelativeLayout>

	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:background="#737373"
	    android:layout_marginTop="1dp"
	    android:id="@+id/xianchat_list_rl"
	    >
	   	<ImageView 
	   	    android:layout_marginLeft="20dp"
	   	    android:id="@+id/ljy_chat_takepic_normal"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:layout_centerVertical="true"
	        android:scaleType="centerCrop"
	        android:src="@drawable/ljy_chat_image_normal"
	        />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="闲聊"
	        android:textSize="18sp"
	        android:textColor="@android:color/white"
	        android:layout_marginLeft="15dp"
	        android:layout_marginTop="10dp"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@id/ljy_chat_takepic_normal"/>
	    <ImageView
	        android:layout_width="18dp"
	        android:layout_height="18dp"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
	        android:src="@drawable/ljy_mm_title_enter"
	        android:layout_centerVertical="true"
	        android:background="#737373"
	        android:scaleType="centerCrop"
	        />
	</RelativeLayout>
	


</LinearLayout>