<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#f2f2f8">

    <ImageView
        android:id="@+id/friends_avatar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="11dp"
        android:scaleType="fitXY"
        android:src="@drawable/ljy_default_avatar" />

    <TextView
        android:id="@+id/friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@id/friends_avatar"
        android:textColor="#0F0F0F"
        android:textSize="16sp" />

    <Button
        android:id="@+id/friend_indicator"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="11dp"
        android:background="@drawable/ljy_button_login_bg"
        android:onClick="addContact"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="@string/button_add"
        android:textSize="14sp" />

</RelativeLayout>