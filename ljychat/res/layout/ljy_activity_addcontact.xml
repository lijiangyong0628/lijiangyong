<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical" >


    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/top_bar_normal_bg"
        android:gravity="center_vertical">

        <include layout="@layout/ljy_commom_back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textSize="18sp" 
            android:text="@string/addfriends"/>
        
        <Button
            android:id="@+id/addfriend_search"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ljy_common_tab_bg"
            android:onClick="searchContact"
            android:text="@string/button_search"
            android:textColor="#fff"
            android:textSize="16sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/addfriends_edit_note"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_margin="10dp"
        android:paddingLeft="5dp"
        android:background="@drawable/ljy_button_normal_shape"
        android:hint="用户名"
        android:singleLine="true"
        android:textColorHint="#b3b3b3"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/ll_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ljy_mm_listitem"
        android:visibility="gone" >
	<ListView 
	    android:id="@+id/addcontact_listview"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    ></ListView>
        
    </LinearLayout>

</LinearLayout>