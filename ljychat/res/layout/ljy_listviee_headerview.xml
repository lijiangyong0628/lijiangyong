<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_applyAndMessage"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/ljy_apply_button_shape">

        <ImageView
            android:id="@+id/apply_photo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:scaleType="fitXY"
            android:src="@drawable/ljy_new_friends_icon" />
        <TextView
                android:id="@+id/unread_apply_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="48dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ljy_unread_dot"
                android:visibility="visible" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@id/apply_photo"
            android:textColor="#0F0F0F"
            android:textSize="20sp" 
            android:text="@string/applyAndmessage"/>

    </RelativeLayout>
